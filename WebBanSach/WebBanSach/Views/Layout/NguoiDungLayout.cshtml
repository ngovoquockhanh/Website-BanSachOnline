<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/NguoiDungCssLayout/NguoiDungCss.css" rel="stylesheet" />
    <link href="~/Content/NguoiDungCssLayout/fonts.css" rel="stylesheet" />
    <link href="~/Content/NguoiDungCssLayout/screen.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/NivoSlider/nivo-slider.css" rel="stylesheet" />
    <script src="~/NivoSlider/jquery-1.7.1.min.js"></script>
    <script src="~/NivoSlider/jquery.nivo.slider.js"></script>
    <script src="~/NivoSlider/jquery.nivo.slider.pack.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    @{
        var u = Session["use"] as WebBanSach.Models.KhachHang;
    }

    <div id="ToanTrang">
        <section class="blank">

            <img src="~/HinhAnh/quang cáo.jpg" />
            <div class="flash success" id="divDanhMuc">

                <div style="margin-left:20%; " id="txtTimKiem">
                  
                    <a style="margin-left: -220%; color: white; font-size: x-large; " href="/Home/Index"> Shop Bán Sách</a>
                    @using (Html.BeginForm("KetQuaTimKiem", "TimKiem", FormMethod.Post))
                    {

                        <p style="margin-bottom:-16%">  @Html.TextBox("txtTimKiem", "", htmlAttributes: new { @class = "TextBoxTimKiem", @placeholder = "Nhập vào từ khóa cần tìm" })</p>
                        <div id="divHinhAnhTimKiem">
                            <button type="submit" style="margin-top:-30%">
                                <img src="~/HinhAnh/1200px-Search_Icon.svg.png" />
                            </button>

                        </div>

                    }
                </div>
                @{
                    if (u != null)
                    {
                        <div class="col-sm-4 col-md-2" style="float:right;">
                            Xin chào : @u.TaiKhoan
                            &nbsp;
                            @*@Html.ActionLink("ĐĂNG XUẤT", "DangXuat", "User", new { style = "color:red" })*@
                            <a style="color:red" href="/NguoiDung/DangXuat"> ĐĂNG XUẤT</a>

                        </div>
                    }
                    else
                    {
                        <div class="col-sm-4 col-md-2" style="float:right;">

                            <a style="color:white" href="/NguoiDung/DangKy"> Đăng Ký /</a>
                            <a style="color: white; font-size: large " href="/NguoiDung/DangNhap">Đăng Nhập</a>

                        </div>

                    }
                }

                <div class="col-sm-5 col-md-1" style="float:right;margin-right:-3%">
                    <a style="max-width: 300px; margin-left: -50%"> @Html.Action("GioHangPartial", "GioHang")</a>


                </div>
                <ul class="navMenu">

                    <li>
                        <a style="color: white;" href="/Home/Index">Trang Chủ </a>
                    </li>

                    <li>
                        <a style="color: white; " href=" /LienHe/Index">Liên Hệ</a>

                    </li>



                </ul>
            </div>
        </section>


        <section>
            <div id="divmenuleft">
                <div class="activity">
                    @Html.Action("SachMoiPartial", "Sach")

                </div>
            </div>
            @*Chèn div nivo slider*@
        <div id="slider" class="nivoSlider">
            <img src="~/HinhAnh/chay bia 5.jpg" /> 
            <img src="~/HinhAnh/chay bia4.jpg" />
            <img src="~/HinhAnh/chay bia 6.jpg" />
        </div>
            <div style="clear:both"> </div>
        </section>
        <div id="NoiDung">
            @RenderBody()
        </div>

        <section>

    

    
            <div>

                @Html.Action("ChuDePartial", "ChuDe")

            </div>
            <hr>
            <hr>

        </section>


        <section class="blank items">
            <div id="divLeft">
                <div class="item">

                    <div class="item-info">
                        @Html.Action("NhaXuatBanPartial", "NhaXuatBan")
                    </div>

                </div>
            </div>
            <div id="divRight">
                @RenderSection("NoiDungBenPhai", false)
            </div>
            <div style="clear:both"></div>


        </section>

    </div>
    <script type="text/javascript">
        $(window).load(function () {
            $('#slider').nivoSlider({
                controlNav: false,
                nextText: "",
                prevText: ""

            });

        });
    </script>
</body>

</html>
